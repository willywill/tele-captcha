  
{
  "env": {
      "node": true,
      "es6": true
  },
  "extends": [
      "airbnb-base"
    ],
  "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
  },
  "rules": {
      "class-methods-use-this": "off",
      "arrow-parens": "off",
      "brace-style": [2, "stroustrup", { "allowSingleLine": false }],
      "indent": ["error", 2],
      "implicit-arrow-linebreak":"off",
      "linebreak-style": "off",
      "object-curly-newline": ["error", { "minProperties": 6, "consistent": true }],
      "max-len": ["error", { "code": 140 }]
  }
}